<?xml version="1.0" encoding="UTF-8"?>
<!-- view的各种状态(正常无焦点,焦点,onclick按下、放开等等) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_pressed="true" ><!-- //选中未up时 -->
		<shape>
			<!-- 颜色渐变startColor开始颜色； endColor结束颜色；angle渐变方向-->
			<gradient
				android:startColor="#CD7F32"
				android:endColor="#CD7F32"
				android:angle="270" />
			<!-- 按钮边沿；width边沿宽度；color边沿颜色 -->
			<stroke
				android:width="5dp" />
			<!-- 按钮四个圆角;radius圆角半径 -->
			<corners
				android:radius="5dp" />
			<!-- 按钮文字和边缘距离(内边距) -->
		</shape>
	</item>
	<item android:state_focused="true" ><!-- 焦点 -->
		<shape>
			<gradient
				android:startColor="#CD7F32"
				android:endColor="#CD7F32"
				android:angle="270" />
			<stroke
				android:width="5dp"/>
			<corners
				android:radius="5dp" />
		</shape>
	</item>
	<item><!-- 无焦点 -->
		<shape>
			<gradient
				android:startColor="#CD7F32"
				android:endColor="#CD7F32"
				android:angle="270" />
			<stroke
				android:width="5dp" />
			<corners
				android:radius="5dp" />
		</shape>
	</item>
</selector>
