<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
  	android:paddingRight="16dp"
    
    >
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content" 
       android:paddingTop="8dp"
       android:paddingBottom="8dp"
       >
       <ImageView
           android:id="@+id/readClassImg"
         	android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/class_read"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
           />
      <TextView
           
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@drawable/title_change"
             android:textSize="18sp"    
             android:maxLines="2"
             android:ellipsize="end"
            android:layout_toRightOf="@+id/readClassImg"
              android:layout_marginLeft="8dp"
              android:gravity="fill_vertical"
               android:includeFontPadding="false"
             />
      </RelativeLayout>

    <TextView
        android:layout_marginLeft="16dp"
        android:id="@+id/abs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/abs"  
         android:textSize="14sp"
            android:textColor="@drawable/abs_change" 
             android:maxLines="3"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.2"
            
        />
      <TextView
        android:id="@+id/read_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:textSize="14sp"
            android:textColor="@color/gray_need" 
             android:maxLines="1"
             android:visibility="gone"
           
        />
<LinearLayout
    
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
     android:layout_marginBottom="6.7dp"
                android:layout_marginLeft="16dp"
    
    
    >
      <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" 
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:layout_marginRight="16dp"
                                >

                <TextView
                    android:id="@+id/keyword_01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"                   
                    android:layout_marginRight="5dp"
                    android:background="@drawable/keyword_style"                    
                    android:gravity="center"
                    android:textColor="@color/keyword_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    
                     />

              
                <TextView
                    android:id="@+id/keyword_02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"                   
                    android:layout_marginRight="5dp"
                    android:background="@drawable/keyword_style"
                    android:gravity="center"
                    android:textColor="@color/keyword_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                     android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                     />

                <TextView
                    android:id="@+id/keyword_03"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"                   
                    android:background="@drawable/keyword_style"
                    android:gravity="center"
                    android:textColor="@color/keyword_color"
                    android:textSize="12sp"
                    android:visibility="gone"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"
                    />

            </LinearLayout>
            
                <TextView 
                     android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                    android:id="@+id/like_number"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content" 
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="2013"
                    android:textColor="#cecece"
                    android:drawableLeft="@drawable/like"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="20dp"
                    />
           
            </LinearLayout>
            
</LinearLayout>
