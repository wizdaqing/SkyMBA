<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_toast_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#00000000"
    android:orientation="vertical" 
    >

    <ImageView
        android:id="@+id/credit_background"
        android:layout_width="wrap_content"
   		android:layout_height="wrap_content"
   		android:src="@drawable/show_credit"
   		android:background="#00000000"
        ></ImageView>

	<TextView
	    android:id="@+id/credit_up"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    
	    android:textSize="18sp"
	    android:layout_alignLeft="@+id/credit_background"
	    android:layout_alignRight="@+id/credit_background"
	    android:layout_alignBottom="@+id/credit_background"
	    android:layout_marginBottom="25dp"
	    android:gravity="center"
	    ></TextView>	
</RelativeLayout>
